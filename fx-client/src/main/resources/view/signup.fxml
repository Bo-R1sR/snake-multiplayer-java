<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<!--
<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.snake.fxclient.SimpleUiController">
-->
<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.snake.fxclient.controller.SignupController">

      <HBox>
            <Label>Anmelden</Label>
      </HBox>
      <TextField fx:id="username" promptText="Username" styleClass="input"></TextField>
      <PasswordField fx:id="password" promptText="Passwort" styleClass="input"></PasswordField>
      <PasswordField fx:id="confirmPassword" promptText="Passwort Confirmation" styleClass="input"></PasswordField>

      <Button onAction="#signupAction" text="SIGNUP" styleClass="button-raised"></Button>

      <Label fx:id="signupFailure" visible="false">Signup fehlgeschlagen!</Label>
      <Label fx:id="signupSuccess" visible="false">Signup erfolgreich!</Label>

      <Button onAction="#backToLoginPage" text="back to Login Page" styleClass="button-raised"></Button>


</VBox>
